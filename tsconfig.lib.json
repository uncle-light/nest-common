{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "typeRoots": ["node_modules/@types"],
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "removeComments": true,
      "sourceMap": false,
      "skipLibCheck": true
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "src/**/*.test.ts", "src/**/files/**"]
  }